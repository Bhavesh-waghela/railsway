<div class="row" style="padding: 0 50px;">
  <div class="col-md-12">
    <div class="col-md-7">
      <div id="solutions" class="solutions" style="margin-top: 126px; ">
        <% @solutions.limit(3).order('created_at DESC').each  do |solution|%>
          <div class="card">
          <div class="login-form-main-message"></div>
              <p>
                <small class="total_votes">
                  <%= solution.votes.count%>
                <% if current_user %>
                      <%= form_for solution.votes.new do |f| %>
                         <%= f.hidden_field :solution_id %>
                         <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                         <%#= f.submit "", class: "fa fa-heart"%>
                      <% end %> 
                <% end %> 
                </small>
                <p>
                <%= link_to solution.question , solution_path(solution) %></p>
                <br>
                <span class="descriptive-text">
                  <%= truncate solution.answer %>
                </span>
              </p>
              <p class="other-action">
                <%= link_to "read more" , solution_path(solution), class: "read-more" %>
                <span class="tags">
                  Tags: <%= raw solution.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join('') %>
                </span>
              </p>
          </div>
        <% end %>
        <div class="all_solutions" style="text-align: center; font-size: 21px;">
        <%= link_to "All Solutions", all_solutions_path %></div>
        <%= paginate @solutions %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card" style="margin-top: 126px;"><span class="tag-font-size" style="font-size: 20px;">Tags:</span>
        <div class="tag_cloud" >
          <% tag_cloud Solution.tag_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container text-center">
      <p>Copyright &copy; RailsWay 2016</p>
  </div>
</footer>
