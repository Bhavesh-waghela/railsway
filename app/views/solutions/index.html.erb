<%= render "/custom/form.html.erb"%>
<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <div class="tag_cloud" style="margin-top: 150px">
        <% tag_cloud Solution.tag_counts, %w[s m l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
    </div>
    <div class="solutions" style="margin-top: 126px; ">
      <%  @solutions.each do |solution|%>
        <div>
         Tags: <%= raw solution.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
          <p>
            <small class="total_votes">
              <%= solution.votes.count%>
            </small>
            <%= link_to solution.question , solution_path(solution) %>
          </p>
          <p>
            <%= truncate solution.answer %>
            <br>
            <%= link_to "read more" , solution_path(solution) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<footer>
  <div class="container text-center">
      <p>Copyright &copy; RailsWay 2016</p>
  </div>
</footer>
