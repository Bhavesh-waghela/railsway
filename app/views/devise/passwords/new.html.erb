<% content_for :body_class, "forgot_password" %>
<div class="row">
  <div class="col-md-4 col-md-offset-3 signinbg" style="padding: 4px;">
    <!-- FORGOT PASSWORD FORM -->
    <div class="text-center" style="padding:50px 0">
      <div class="logo">Forgot password</div>
      <!-- Main Form -->
      <div class="login-form-1">
        <form id="forgot-password-form" class="text-left">
          <div class="etc-login-form" style="font-size: 18px">
            <p>When you fill in your registered email address, you will be sent instructions on how to reset your password.</p>
          </div>
          <div class="login-form-main-message"></div>
          <div class="main-login-form">
            <div class="login-group">
              <div class="form-group">
                <label for="fp_email" class="sr-only">Email address</label>
                <input type="text" class="form-control" id="fp_email" name="fp_email" placeholder="email address">
              </div>
            </div>
            <button type="submit" class="login-button" style="margin-top: -24px"><i class="fa fa-chevron-right"></i></button>
          </div>
          <div class="etc-login-form" style="font-size: 18px">
            <p>Already have an account? <%= link_to "Click Here", new_user_session_path%></p>
            <p>New user? <%= link_to "Click Here" , new_user_registration_path%></p>
          </div>
        </form>
      </div>
      <!-- end:Main Form -->
    </div>
  </div>  
</div>

<style type="text/css">
.forgot_password{
    height: 100%;
    width: 100%;
    background: url(/assets/sign_in-bg.jpg);
 }
.logo{
  color: #000;
}
.etc-login-form{
  color: #000;
  text-align: center;
}
.signinbg{
    height: 514px;
    width: 666px;
    margin-top: 100px;
}
.login-form-1{
  border: 2px solid #ddd;
  width: 100%;
  max-width: 90%;
}
.login-form-1 .form-group {
    border-bottom: 2px solid #efefef !important;
  }
</style>    
