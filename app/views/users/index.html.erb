                    <h1 class="brand-heading" style="margin-top: 150px;">Rails-Way</h1>
                     <div class="sign-in-sign-up-btn">
                        <% unless user_signed_in? %>
                          <ul class="list-inline banner-social-buttons" style="margin-top: 85px;margin-left: 30px;">
                              <li>
                                   <a href="<%= new_user_session_path %>" class="btn btn-default btn-lg"><i class="fa fa-user fa-fw"></i> <span class="network-name">Sign In</span></a>
                              </li>
                              <li>
                                  <a href="<%= new_user_registration_path %>" class="btn btn-default btn-lg"><i class="fa fa-registered fa-fw"></i> <span class="network-name">Sign Up</span></a>
